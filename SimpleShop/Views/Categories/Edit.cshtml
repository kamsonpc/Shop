@model SimpleShop.Models.Category

@{
    ViewBag.Title = "Edit";
}

<div class="form-container z-depth-2">


	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true, "", new { @class = "red-text" })

		<div class="row"><h3 class="center-align">Edytuj</h3></div>
		<div class="row">
			<div class="input-field col s12">
				<i class="material-icons prefix">border_color</i>
				@Html.LabelFor(m => m.Name)
				@Html.TextBoxFor(m => m.Name)
				@Html.ValidationMessageFor(m => m.Name, "", new { @class = "red-text" })
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<button class="waves-effect waves-light btn-large btn-submit" type="submit"><i class="material-icons right">save</i> Save</button>
			</div>
		</div>
	}
</div>

