@model IEnumerable<SimpleShop.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Kategorii Produktów</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
	    <th>
			Operacje
	    </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
	        <a class="btn btn-warning" href="@Url.Action("Edit", "Categories", new {id = item.CategoryId})"><i class="glyphicon glyphicon-pencil"></i></a>
	        <a class="btn btn-danger" href="@Url.Action("Delete", "Categories", new {id = item.CategoryId})"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
}

</table>
<p>
	<a class="btn btn-success" href="@Url.Action("Create", "Categories")"> <i class="glyphicon glyphicon-plus"></i> Dodaj</a>
</p>